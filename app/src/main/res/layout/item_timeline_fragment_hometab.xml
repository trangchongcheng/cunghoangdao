<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeline="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.alorma.timeline.RoundTimelineView
        android:clickable="false"
        android:id="@+id/item_timeline_timeline"
        android:layout_width="?android:listPreferredItemHeight"
        android:layout_height="?android:listPreferredItemHeight"
        timeline:timeline_drawInternal="true"
        timeline:timeline_internalColor="@color/colorPrimary"
        timeline:timeline_indicatorColor="@color/textColorPrimary"
        timeline:timeline_indicatorSize="4dp"
        timeline:timeline_internalPadding="2dp"
        timeline:timeline_lineWidth="1dp"
        timeline:timeline_lineColor="@color/green_semi_transparent_pressed"
        timeline:timeline_lineStyle="linear" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:listPreferredItemHeight"
        timeline:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/item_timeline_ll"
            android:background="@drawable/config_click_item_timeline"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_timeline_tvTitle"
                    style="@style/text_title_categorye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_vertical"
                    android:maxLines="2"
                    android:text="cheng" />

                <TextView
                    android:id="@+id/item_timeline_tvDescriptions"
                    style="@style/text_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_vertical"
                    android:maxLines="1"
                    android:maxLength="200"
                    android:text="cheng" />
                <TextView
                    android:id="@+id/item_timeline_tvPubdate"
                    style="@style/text_descriptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:maxLength="200"
                    android:text="cheng" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.4"
                android:src="@drawable/ic_navigation" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
