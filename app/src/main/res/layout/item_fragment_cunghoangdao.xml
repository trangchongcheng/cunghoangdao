<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        card_view:cardUseCompatPadding="true"
        android:id="@+id/item_cunghoangdao_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="1dp">

        <LinearLayout
            android:background="@drawable/ripple_item_listview"
            android:clickable="true"
            android:id="@+id/item_cunghoangdao_ll"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_waiting"
                android:scaleType="fitXY"
                android:id="@+id/item_cunghoangdao_imgThumbnail"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <LinearLayout
                android:paddingLeft="8dp"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/item_cunghoangdao_tvTitle"
                        style="@style/text_title_categorye"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:maxLines="2"
                        android:text="Cheng" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_cunghoangdao_tvDescription"
                        style="@style/text_descriptions_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:maxLines="1"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_cunghoangdao_tvCategorye"
                        style="@style/text_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingBottom="8dp"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        style="@style/text_descriptions"
                        android:id="@+id/item_cunghoangdao_tvPubdate"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>