<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        card_view:cardUseCompatPadding="true"
        android:id="@+id/item_cunghoangdao_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp">

        <LinearLayout
            android:background="@drawable/config_click_item_timeline"
            android:clickable="true"
            android:id="@+id/item_cunghoangdao_ll"
            android:layout_margin="16dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_cunghoangdao_imgThumbnail"
                android:src="@drawable/chipi"
                android:layout_weight="2"
                android:layout_width="100dp"
                android:layout_height="70dp" />
            <LinearLayout
                android:paddingLeft="8dp"
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/item_cunghoangdao_tvTitle"
                        style="@style/text_title_categorye"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingBottom="8dp"
                        android:maxLines="2"
                        android:text="Cheng" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        style="@style/text_descriptions"
                        android:id="@+id/item_cunghoangdao_tvPubdate"
                        android:maxLines="1"
                        android:text="@string/time_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_cunghoangdao_tvDescription"
                        style="@style/text_descriptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingBottom="8dp"
                        android:maxLines="1"
                        android:text="Cheng" />

                    <ImageView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/item_cunghoangdao_imgFavorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:src="@drawable/ic_star_border_grey_500_18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>