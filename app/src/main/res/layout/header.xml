<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">
    <ImageView
        android:scaleType="center"
        android:id="@+id/image"
        android:background="@drawable/chd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <cheng.com.android.cunghoangdao.ultils.htmltextview.PatchedTextView
        android:textColor="@color/textColorPrimary"
        android:textSize="12sp"
        android:textStyle="bold"
        customfontdemo:fontName="Nabila.ttf"
        android:gravity="center"
        android:text="Ứng dụng bói toán, tử vi, tin tức 12 cung hoàng đạo, phong thủy...cập nhật theo ngày!"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>