<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/ic_add_black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/imgLogo"
        android:id="@+id/tvSologan"
        style="@style/text_sologan"
        android:layout_centerHorizontal="true"
        android:text="@string/sologan" />

    <ProgressBar
        android:id="@+id/google_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" />
    <TextView
        style="@style/text_lauching"
        android:id="@+id/tvDecription"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/google_progress"
        android:text="@string/khoi_dong"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:layout_weight="1"
            android:background="@color/vivid_yellow"
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:layout_weight="1"
            android:background="@color/dark_moderate_blue"
            android:layout_width="wrap_content"
            android:layout_height="5dp" />

        <TextView
            android:layout_weight="1"
            android:background="@color/bright_blue"
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
    </LinearLayout>

</RelativeLayout>
