<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_listnewsfeed_ll"
            android:padding="8dp"
            android:clickable="true"
            android:background="@drawable/ripple_item_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.2">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_listnewsfeed_imgThumbnail"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:border_color="#FF000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:maxLines="2"
                    android:id="@+id/item_listnewsfeed_tvTitle"
                    style="@style/text_title_categorye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cheng" />

                <TextView
                    android:id="@+id/item_listnewsfeed_tvDescriptions"
                    style="@style/text_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>
                <TextView
                    android:id="@+id/item_listnewsfeed_tvPubdate"
                    style="@style/text_descriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="cheng"
                    android:textStyle="italic"/>
            </LinearLayout>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_navigation" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
