<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/moderate_pink</item>
        <item name="windowActionModeOverlay">true</item>

    </style>
    <style name="AppThemeDrawer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>



    <style name="text_login">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_categoryes">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_radio">
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="btn_namsinh">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="text_20sp">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_lauching">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_sologan">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_cunghoangdao">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_date_cunghoangdao">
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_title_dialog">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_title_news">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_title_categorye">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_category">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="text_boi">
        <item name="android:drawableRight">@drawable/ic_day_edit</item>
        <item name="android:drawableEnd">@drawable/ic_day_edit</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="text_descriptions">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_descriptions_medium">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="btn_check_result">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/style_button_connect</item>
    </style>
    <style name="tv_trac_nghiem_ty">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv_chitiet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_Spinner">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:popupBackground">#a6417e</item>
        <item name="android:spinnerMode">dropdown</item>

    </style>
    <style name="AppThemeNoActionBar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeNoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_tienich_title">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_tienich_descriptions">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">25sp</item>
    </style>


    <style name="ToolbarTheme"
        parent="Widget.AppCompat.Toolbar">
        <item name="actionMenuTextColor">#1bff3a</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
