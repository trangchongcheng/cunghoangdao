<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>

    </style>
    <style name="AppThemeDrawer" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_login">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_categoryes">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_namsinh">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text_cunghoangdao">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="text_date_cunghoangdao">
        <item name="android:textColor">@color/half_black</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_title_news">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_title_categorye">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navigationBarColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_descriptions">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="icon_12_con_giap">
        <item name="timeline_indicatorSize">20dp</item>
        <item name="timeline_lineColor">@color/icon_12_con_giap</item>
        <item name="timeline_lineStyle">linear</item>
        <item name="timeline_lineWidth">0dp</item>
        <item name="android:background">@drawable/ripple_icon_cunghoangdao</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
